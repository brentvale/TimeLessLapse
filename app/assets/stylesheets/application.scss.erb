@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";

$fade-time: .5s;

//COLORS

//GRAYS
$alabaster: #f9f9f9; //white-ish
$wild-sand: #f4f4f4; //white-touch of gray
$alto: #d3d3d3; //unclickable gray color
$silver: #b8b8b8; //good for alto:hover
$boulder: #767676; //darker gray
$tundora: #363636; //darkest gray

$carnation: #FD5C63; //pink;
$light-carnation: #fff5f6;
$dark-carnation: #e1494f;
$neon-green: #39FF14;

html{
	font-size: 16px;
}
body{
	font-size: 62.5%;
}
#main{
	font-family: 'Raleway', sans-serif;
}
img.with-border{
	border-radius: 4px;
}
ul{
 list-style: none;
}
h2{
	font-size: 1.5em !important;
}
p.heading{
	font-size: 0.9em;
	margin-bottom: 0;
}
input.heading{
	border-style: none;
	font-size: 1.5em;
	line-height: 1.1em;
	padding-top:1em;
	padding-bottom:1em;
	outline-width: 0;
	text-align:center;
	text-decoration: none;
	width: 60%;
}
@keyframes fade-in {
    from {opacity: 0;}
    to {opacity: 1.0;}
}
.active{
	animation: fade-in $fade-time forwards;
}
.active-hub .overlay{
  display: none;
}
.inactive-hub .overlay{
	display: block;
}
.overlay{
	background-color: rgba(0,0,0,0.3);
	border-radius: 4px;
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
}
#landingSprite{
	background: url("<%= asset_path('tree_grow_sprite_vale.png') %>");
	background-position: 0px 0px;
	height: 184px;
	width: 200px;
}
#landingHeader{
	height: 400px;
	height: 50vh;
	margin-bottom: 150px;
	padding-top: 50px;
	h1{
		font-weight: 400;
		text-align:center;
		span{
			color: #333;
			font-weight: 100;
		}
	}
	h2{
		text-align:center;
		font-weight: 100;
	}
}
.landing-page-block{
	perspective: 400px;
	margin-bottom: 50px;
	max-width:500px;
	h3.landing-step{
		color: $carnation;
		margin: 0;
	}
	padding: 20px;
	p{
		span{
			color: #228B22;
			font-weight: bold;
		}
	}
	img.mountain{
		height: 100px;
		transform: rotate3d(0,1,0,40deg);
		-ms-transform: rotate3d(0,1,0,40deg); /* IE 9 */
		-webkit-transform: rotate3d(0,1,0,40deg); /* Safari and Chrome */
	}
	img.tripod{
		float: right;
		height: 80px;
		margin-right:50px;
		margin-top:60px;
	}
}
.landing-page-block.right-block{
	text-align:right;
	p{
		display:inline-block;
		text-align:left;
		width: 350px;
	}
}
.landing-page-block.align-center{
	text-align:center;
	h3.landing-step{
		text-align:center;
	}
	p{
		text-align:center;
	}
}
.button-container{
	margin-bottom:100px;
	width: 250px;
	p{
		margin-bottom: 0;
		text-align:center;
	}
}
.align-center{
	text-align:center;
}
.align-left{
	text-align:left;
}
.bold{
	font-weight: 900;
}
.box-with-shadow{
  background: $alabaster;
  box-shadow: 0 1px 4px rgba(0,0,0,.24);
  border-radius: 0.3em;
	margin: 0px 0px 1.4em 0px;
	max-width:25em;
  padding:1em 3em 1em 3em;
}
.box-with-shadow-selected{
  background: $wild-sand;
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.box-with-shadow-mobile{
	padding:1em 1em 1em 1em;
}
.box-with-shadow:hover{
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.disguised-link, .disguised-link:hover, .disguised-link:visited{
	color:$boulder;
	text-decoration:none;
}
.drop-shadow{
	box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.edit-block-header, .edit-block-footer{
	background-color: $wild-sand;
	height: 250px;
	padding: 2em;
	position: relative;
	text-align:center;
	div p {
		color: $silver;
	}
	div i.fa-user-circle-o{
		color: $alto;
	}
	div:hover p{
		color: $boulder;
	}
	div:hover i.fa-user-circle-o{
		color: $silver;
	}
} 
.edit-block-content-border{
	border-top: 1px solid $silver;
	border-bottom: 1px solid $silver;
	width: 100%;
}
.edit-block-content{
	width: 400px;
	div{
		margin-top:1em;
		text-align:left;
	}
	div div{
		display:inline-block;
		margin-top:0em;
		padding-top:0px;
		text-align:center;
		width: 5em;
	}
	div p, div .profile-input-field{
		border-style:none;
		box-shadow:none;
		display:inline-block;
		line-height:2.5em;
		margin-bottom: 0;
		padding-bottom: 0.5em;
		vertical-align:top;
	}
	div p{
		border-bottom: 1px solid $wild-sand;
		width: 70%;
	}
	div .profile-input-field{
		border-bottom: none;
		width: 100%;
	}
	div p.unfilled{
		color: $silver;
	}
	div:last-child p{
		border-bottom: none;
	}
	div .fa{
		color: $boulder;
		display: inline;
		font-size: 30px;
	}
	.profile-input-field:focus{
		text-decoration: none;
		outline-width: 0;
	}
	.input-container{
		border-bottom: 1px solid $wild-sand;
		position: relative;
		vertical-align:top;
		width: 70%;
		i{
			position:absolute;
			right: 0;
			top: 5px;
		}
	}
}
.hub-select-container{
	height:25em;
	max-width: 40em;
	padding:1em;
	width: 95%;
}
.image-display{
	width: 100%;
}
.photo-container{
	background-color: white;
	border-bottom:1px solid $alto;
	left: 0px; 
	padding: 0em 3em 0em 3em;
	position: fixed; 
	top: 50px;
	z-index: 10;
}
.scrolloff {
    pointer-events: none;
}
.select-hub-list-item{
	border: 1px solid $wild-sand;
	display: block;
	max-width: 500px;
	margin-top: 5px;
	margin-bottom: 5px;
	padding: 10px;
	text-align:left;
	width: 100%;
	img{
		vertical-align:top;
	}
	div{
		display:inline-block;
		padding-left: 40px;
		p{
			margin-bottom: 0.2em;
		}
	}
}
//BLOCK ELEMENTS
.border-block{
	border: 1px solid black;
	border-radius: 4px;
}
.border-block:hover{
	border: 1px solid #767676;
}
.block-element{
	display: block;
	margin-top:2em;
	margin-bottom:2em;
	padding:2em;
}
.center-block{
	margin-left: auto;
	margin-right:auto;
	left:0;
	right:0;
}
.heading-block-container{
	position:relative;
	span{
		color:$carnation;
		position:absolute;
		right: 10px;
		top: 1.5em;
	}
}
.heading-block-container-border{
	border-bottom: 1px solid $wild-sand;
}
.heading-block{
	display:inline;
	margin: 0;
	padding-top:1em;
	padding-bottom: 1em;
	text-align:center;
	width: 70%;
}
.icon-center-block{
	text-align:right;
	perspective: 500px;
}
.one-third-block{
	display:inline-block;
	width: 33%;
	>div{
		padding:1px;
	}
	img{
		width: 100%;
		height: auto;
	}
}
.page-block{
	max-width: 800px;
	width: 100%;
	.nav-block{
		width: 100%;
	}
	.nav-block div:first-child, .nav-block div:last-child{
		width: 15%;
	}
	.nav-block div{
		display:inline-block;
		text-align:center;
		width: 70%;
	}
	h3{
		margin: 1em;
	}
}
.page-block-border{
	border-bottom: 1px solid $wild-sand;
	border-left: 1px solid $wild-sand;
	border-right: 1px solid $wild-sand;
}
.page-block-padded{
	padding: 0 1em 1em 1em;
}
//BUTTONS
.button{
	border-radius:.4em	;
	display:inline-block;
	margin-top: 1em;
	margin-bottom: 1em;
	text-align:center;
}
.button-create{
	border: 2px solid $carnation;
	color: $carnation;
}
.button-create:hover{
	border: 2px solid $dark-carnation;
	color: $dark-carnation;
	background-color:$light-carnation;
}
.button-med{
	line-height: 2.5em;
	height:2.5em;
	width: 10em;
}
.button-unclickable{
	border: 1px solid $alto;
	color: $alto;
}
.button-undo{
	border: 1px solid $boulder;
	color: $boulder;
}
.button-width-full{
	margin-left:20px;
	width: 80%;
}
.button-landing-width{
	width: 100%;
}
.button-height-large{
	margin: 0;
	height: 40px;
	padding-top: 7px;
}
//ICONS
.fa-home{
	color: #777;
	float:left;
	font-size: 20px;
	margin-top:1em;
	padding-left: 10px;
	z-index: 10;
}
.fa-home:hover{
	color: #5e5e5e;
}
.fa-user-circle-o{
	color: $alto;
}
.fa-user-circle-o.small{
	font-size: 80px;
}
.fa-user-circle-o.large{
	font-size: 120px;
}
.fa-user-circle-o:hover{
	color: $silver;
}
.fa-share-square{
	top: 3px;
	font-size: 30px;
	position: absolute;
	right: 4px;
}
.inactive-hub .fa-share-square{
	color: rgba(253,92,99,1.0); //$carnation
}
.active-hub .fa-share-square{
	color: rgba(253,92,99,0.4);
}
.fa-picture-o{
	color: $carnation;
	height: 100px;
	margin-left: 10px;
	width: 110px;
	font-size: 100px;
}
.fa-picture-o.landing{
	font-size: 75px;
	color: $tundora;
	perspective: 600x;
	transform: rotate3d(0,1,0,-60deg);
	-ms-transform: rotate3d(0,1,0,-60deg); /* IE 9 */
	-webkit-transform: rotate3d(0,1,0,-60deg); /* Safari and Chrome */
}

//FORMS
//used on file upload input
.image-upload{
	text-align:center;
	width: 12em;	
}
.capitalize{
	text-transform: capitalize;
}
@-webkit-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-moz-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-o-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
.display-none{
	animation: fade-out $fade-time forwards;
}
.remove-element{
	display:none;
}
#formActions{
	margin-bottom: 15px;
}
.hand-on-hover:hover{
	cursor:hand;
	cursor:pointer;
	content: "New Photo";
}
.hub-button, .hub-select{
	margin: 15px;
}
#landingTimelapseContainer{
	width:90%;
	margin-left:auto;
	margin-right:auto
}
.timelapse-display{
	position:relative;
	height:300px;
	width: 300px;
	.timelapse-image{
		left:0;
		right:0;
		margin-left:auto;
		margin-right:auto;
		position:absolute;
		max-height:80%;
		max-width: 80%;
	}
}
//FORMS
.med-form{
	width: 400px;
}
.small-form{
	width: 300px;
}

//detect mobile specifically, prevent autofocus of input fields
body.is-mobile input[type="text"]{
	font-size:16px;
}
body.is-mobile .edit-block-content div p{
	font-size:16px;
}

//MEDIA QUERIES
//SCREEN SIZES
$screen-lg-min: 1200px;
$screen-md-min: 992px;
$screen-sm-min: 768px;

$screen-xs-min: 500px;

@media (min-width: $screen-xs-min){
	.timelapse-display{
		position:relative;
		height:500px;
		width: 500px;
		.timelapse-image{
			max-height:100%;
			max-width: 100%;
		}
	}
	.icon-center-block{
		text-align:center;
		
	}
}

@media (min-width: $screen-sm-min) { 
	.button-width-full{
		width: 100%;
	}
	input.heading{
		font-size: 2em;
	}
	.heading-block-container{
		span{
			top: 2em;
		}
	}
	#landingHeader{
		padding-top: 150px;
	}
	.fa-home{
		margin-top:1.5em;
	}
	.fa-share-square{
		bottom: 8px;
		font-size: 50px;
		right: 10px;
	}
	#landingTimelapseContainer{
		width:60%;
		margin-left:auto;
		margin-right:auto
	}
	.hub-select-container{
		height:20em;
		padding:2em;
		width: 80%;
	}
	.button-med{
		width: 12em;
	}
	h2{
		font-size: 2em !important;
	}
}