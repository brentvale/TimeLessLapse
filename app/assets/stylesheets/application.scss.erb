@import "bootstrap-sprockets";
@import "bootstrap";

$fade-time: .5s;
#map{
	display:block;
	height: 85vh;
	width: 90%;
}
ul{
 list-style: none;
}
@keyframes fade-in {
    from {opacity: 0;}
    to {opacity: 1.0;}
}
.active{
	animation: fade-in $fade-time forwards;
}
.capitalize{
	text-transform: capitalize;
}
.center-block{
	margin-left: auto;
	margin-right:auto;
	left:0;
	right:0;
}
@-webkit-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-moz-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-o-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}

.display-none{
	animation: fade-out $fade-time forwards;
}
#formActions{
	margin-bottom: 15px;
}
.hand-on-hover:hover{
	cursor:hand;
	cursor:pointer;
	content: "New Photo";
}
.hub-button, .hub-select{
	margin: 15px;
}
.timelapse-display{
	position:relative;
	height:500px;
	width: 500px;
	.timelapse-image{
		left:0;
		right:0;
		margin-left:auto;
		margin-right:auto;
		position:absolute;
	}
}

.timelapse-image-container{
	img{
		max-height:100%;
		max-width: 100%;
	}
}
//FORMS
.med-form{
	width: 400px;
}
.small-form{
	width: 300px;
}








