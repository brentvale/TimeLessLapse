@import "bootstrap-sprockets";
@import "bootstrap";

$fade-time: .5s;

//COLORS

//GRAYS
$alabaster: #f9f9f9; //white-ish
$wild-sand: #f4f4f4; //white-touch of gray
$alto: #d3d3d3; //unclickable gray color
$boulder: #767676; //darker gray
$tundora: #363636; //darkest gray

$carnation: #FD5C63; //pink;
$light-carnation: #fff5f6;
$dark-carnation: #e1494f;
$neon-green: #39FF14;

html{
	font-size: 16px;
}
body{
	font-size: 62.5%;
}
#main{
	font-family: 'Raleway', sans-serif;
}
img{
	border: 3px solid #fff;
	border-radius: 4px;
}
ul{
 list-style: none;
}
@keyframes fade-in {
    from {opacity: 0;}
    to {opacity: 1.0;}
}
.active{
	animation: fade-in $fade-time forwards;
}
.align-center{
	text-align:center;
}
.align-left{
	text-align:left;
}
.bold{
	font-weight: 900;
}
.box-with-shadow{
  background: $alabaster;
  box-shadow: 0 1px 4px rgba(0,0,0,.24);
  border-radius: 0.3em;
	margin: 0px 0px 1.4em 0px;
	max-width:25em;
  padding:1em 3em 1em 3em;
}
.box-with-shadow-selected{
  background: $wild-sand;
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.box-with-shadow-mobile{
	padding:1em 1em 1em 1em;
}
.box-with-shadow:hover{
  box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.drop-shadow{
	box-shadow: 0 3px 10px rgba(0,0,0,.23);
}
.hub-select-container{
	height:25em;
	max-width: 40em;
	padding:1em;
	width: 95%;
}
.image-upload{
	text-align:center;
}
#map{
  width: 400px;
  height: 300px;
}
.photo-container{
	background-color: white;
	border-bottom:1px solid $alto;
	left: 0px; 
	padding: 1em 3em 0em 3em;
	position: fixed; 
	text-align:center;
	top: 50px;
	width: 100%;
	z-index: 10;
}
//BLOCK ELEMENTS
.border-block{
	border: 1px solid black;
	border-radius: 4px;
}
.border-block:hover{
	border: 1px solid #767676;
}
.block-element{
	display: block;
	margin-top:2em;
	margin-bottom:2em;
	padding:2em;
}
.center-block{
	margin-left: auto;
	margin-right:auto;
	left:0;
	right:0;
}
.heading-block{
	margin-top: 0;
	margin-bottom: 1em;
	padding-top: 0.5em;
}
//BUTTONS
.button{
	border-radius:.4em	;
	display:inline-block;
	margin-top: 1em;
	margin-bottom: 1em;
	text-align:center;
}
.button-create{
	border: 2px solid $carnation;
	color: $carnation;
}
.button-create:hover{
	border: 2px solid $dark-carnation;
	color: $dark-carnation;
	background-color:$light-carnation;
}
.button-med{
	line-height: 2.5em;
	height:2.5em;
	width: 10em;
}
.button-unclickable{
	border: 1px solid $alto;
	color: $alto;
}
.button-undo{
	border: 1px solid $boulder;
	color: $boulder;
}
.circle-button-parent{
	margin-top: 2em;
}
.circle-button{
	height:3em;
	width: 3em;
	border-radius: 1.5em;
	border: 2px solid $alto;
	-moz-box-shadow:    5px 5px 5px 6px #ccc;
	-webkit-box-shadow: 5px 5px 5px 6px #ccc;
	box-shadow:         5px 5px 5px 6px #ccc;
}
.circle-button:hover{
	transform: translate(3px, 3px);
	
	-moz-box-shadow:    3px 3px 5px 6px #ccc;
	-webkit-box-shadow: 3px 3px 5px 6px #ccc;
	box-shadow:         3px 3px 5px 6px #ccc;
}

//FORMS
//used on file upload input
.image-upload{
	width: 12em;
}
.capitalize{
	text-transform: capitalize;
}
@-webkit-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-moz-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@-o-keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
@keyframes fade-out {
  0%   { opacity: 1.0; }
  100%   {opacity: 0;
		 			display:none;}
}
.display-none{
	animation: fade-out $fade-time forwards;
}
.remove-element{
	display:none;
}
#formActions{
	margin-bottom: 15px;
}
.hand-on-hover:hover{
	cursor:hand;
	cursor:pointer;
	content: "New Photo";
}
.hub-button, .hub-select{
	margin: 15px;
}
#landingTimelapseContainer{
	width:90%;
	margin-left:auto;
	margin-right:auto
}
.timelapse-display{
	position:relative;
	height:300px;
	width: 300px;
	.timelapse-image{
		left:0;
		right:0;
		margin-left:auto;
		margin-right:auto;
		position:absolute;
		max-height:80%;
		max-width: 80%;
	}
}
//FORMS
.med-form{
	width: 400px;
}
.small-form{
	width: 300px;
}

//MEDIA QUERIES
//SCREEN SIZES
$screen-lg-min: 1200px;
$screen-md-min: 992px;
$screen-sm-min: 768px;

$screen-xs-min: 500px;

@media (min-width: $screen-xs-min){
	.timelapse-display{
		position:relative;
		height:500px;
		width: 500px;
		.timelapse-image{
			max-height:100%;
			max-width: 100%;
		}
	}
}

@media (min-width: $screen-sm-min) { 
	#landingTimelapseContainer{
		width:60%;
		margin-left:auto;
		margin-right:auto
	}
	.hub-select-container{
		height:20em;
		padding:2em;
		width: 80%;
	}
	.circle-button-parent{
		margin-top: 5em;
	}
	.button-med{
		width: 12em;
	}
}