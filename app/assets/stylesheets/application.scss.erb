//SLIDER
#sliderContainer{
	#tortoise, #hare{
		border-top: 1px solid grey;
		border-bottom: 1px solid grey;
		display:inline-block;
		height:50px;
		vertical-align:top;
		width:12%;
		div {
			background: url("<%= asset_path('tortoise_and_hare.png') %>");
			background-size: 100% 200%;
			display:inline-block;
			height: 40px;
			width:36px;
		}
	}
	#tortoise{
		border-left: 1px solid grey;
		text-align:right;
		div {
			margin-right:0;
		}
	}
	#hare{
		border-right: 1px solid grey;
		text-align:left;
		div {
			background-position: 0% -100%;
		}
	}
}
.horizontal-slider{
  border-top: 1px solid grey;
	border-bottom: 1px solid grey;
	display: inline-block;
  height: 50px;
  max-width: 700px;
	vertical-align:middle;
  width: 76%;
}
.horizontal-slider .handle {
	border-radius: 20px;
  height: 40px;
  line-height: 50px;
	margin-top:5px;
  top: 0px;
  width: 40px;
}
.handle{
	font-size: 0.9em;
	text-align: center;
	background-color: $carnation;
	color: white;
	cursor: pointer;
}
.horizontal-slider .bar{
  top: 25px;
  height: 4px;
}
.bar {
  position: relative;
  background: #ddd;
}



//MEDIA QUERIES
//SCREEN SIZES
$screen-lg-min: 1200px;
$screen-md-min: 992px;
$screen-sm-min: 768px;

$screen-xs-min: 500px;

@media (min-width: $screen-xs-min){
	.timelapse-display{
		position:relative;
		height:500px;
		width: 500px;
		.timelapse-image{
			max-height:100%;
			max-width: 100%;
		}
	}
	.icon-center-block{
		text-align:center;
		
	}
	.fa-share-square{
		font-size: 50px;
		top: 10px;
		right: 10px;
	}
	.box-with-shadow-inverted{
		padding:1em 3em 1em 3em;
	}
}

@media (min-width: $screen-sm-min) { 
	.button-width-full{
		width: 100%;
	}
	input.heading{
		font-size: 2em;
	}
	.heading-block-container{
		span{
			top: 2em;
		}
	}
	#landingHeader{
		padding-top: 150px;
	}
	.fa-home{
		margin-top:1.5em;
	}
	#landingTimelapseContainer{
		width:60%;
		margin-left:auto;
		margin-right:auto
	}
	.hub-select-container{
		height:20em;
		padding:2em;
		width: 80%;
	}
	.button-med{
		width: 12em;
	}
	h2{
		font-size: 2em !important;
	}
}