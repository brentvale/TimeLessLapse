	<div class="timelapse-display <%= data[:class_name] %>" data-hub-id="<%= @hub.id %>" style="border:1px solid #767676;border-radius:4px;text-align:center;">
		<% hub_length = @hub.photographs.length %>
		<% @photographs.each_with_index do |pic, idx| %>

				<% if idx == 0 %>
					<div class="timelapse-image active"  data-order-id="<%= pic.order_number - 1 %>" >
						<p>Picture <%= idx + 1 %> of <%= hub_length %></p>
						<%= image_tag pic.image.url(:small), data: { order_id: 0} %>
					</div>
				<% else %>
					<div class="display-none timelapse-image" data-order-id="<%= pic.order_number - 1 %>">
						<p>Picture <%= idx + 1 %> of <%= hub_length %></p>
						<%= image_tag pic.image.url(:small), data: { order_id: (pic.order_number - 1)} %>
					</div>
				<% end %>
		<% end %>
	</div>